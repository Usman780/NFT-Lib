<script>
    $('#userTable').DataTable(
    {
        "ajax":
        {
            "url": '@Url.Action("GetAdminList", "SuperAdmin")',
            "type": "POST",
            "datatype": "json",
        },
        'columns':
            [
                { "data": "Name", "name": "Name" },
                { "data": "Contact", "name": "Contact" },
                { "data": "Email", "name": "Email" },
                { "data": "Address", "name": "Address" },
                { "data": "Action", "name": "" }
            ],
        'columnDefs':
        [
            {
                "targets": 0,
                'className': 'col-lg-2',
                "render": function(data, type, full, meta) {
                    return full.Name;
                }
            },
            {
                "targets": 1,
                'className': 'col-lg-3',
                "render": function (data, type, full, meta) {
                    return full.Contact;
                }
            },
            {
                "targets": 2,
                'className': 'col-lg-4',
                "render": function (data, type, full, meta) {
                    return full.Email;
                }
            },
            {
                "targets": 3,
                'className': 'col-lg-2',
                "render": function (data, type, full, meta) {
                    return full.Address;
                }
            },
            {
                "targets": 4,
                'className': 'col-lg-1',
                'searchable': false,
                'orderable': false,
                "render": function (data, type, full, meta)
                {

                        return '<ul class="icons-list text-center"> <li class="dropdown"> <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <i class="icon-menu9"></i> </a> <ul class="dropdown-menu dropdown-menu-right"> ' +
                            '<li><a class="text-primary" onclick="updateFunction(' + full.Id + ')"><i class="icon-pencil"></i> Edit</a></li>' +
                            '<li><a class="text-danger" onclick="deleteFunction(' + full.Id + ')" data-toggle="modal" data-target="#deleteModal"><i class="glyphicon glyphicon-floppy-remove"></i> Delete</a></li>' +
                            '</ul></li></ul>';
                }
            }
        ],
       "serverSide": "true",
        "processing": "true",
        "language":
        {
            "processing": "<i class='icon-spinner spinner icon-3x'></i>",
            "search": "<span>Search :</span> _INPUT_",
            "searchPlaceholder": "Type to Filter",
            "lengthMenu": "<span>Show :</span> _MENU_",
            "paginate": { 'first': 'First', 'last': 'Last', 'next': '&rarr;', 'previous': '&larr;' }
        },
    });


    function SearchUser()
    {
        $('#userTable').DataTable().clear();
        $('#userTable').DataTable().destroy();
        var name = $('#searchName').val();
        var contact = $('#searchContact').val();
        var email=$('#searchEmail').val();
        $('#userTable').DataTable(
        {
            "ajax":
            {
                "url": '@Url.Action("GetAdminList", "SuperAdmin")',
                "type": "Post",
                "datatype": "json",
                "data": { name: name, contact: contact, email: email }
            },
            'columns':
            [
                    { "data": "Name", "name": "Name" },
                    { "data": "Contact", "name": "Contact" },
                    { "data": "Email", "name": "Email" },
                    { "data": "Address", "name": "Address" },
                    { "data": "Action", "name": "" }
            ],
            'columnDefs':
            [
                    {
                        "targets": 0,
                        'className': 'col-lg-2',
                        "render": function (data, type, full, meta) {
                            return full.Name;
                        }
                    },
                    {
                        "targets": 1,
                        'className': 'col-lg-3',
                        "render": function (data, type, full, meta) {
                            return full.Contact;
                        }
                    },
                    {
                        "targets": 2,
                        'className': 'col-lg-4',
                        "render": function (data, type, full, meta) {
                            return full.Email;
                        }
                    },
                    {
                        "targets": 3,
                        'className': 'col-lg-2',
                        "render": function (data, type, full, meta) {
                            return full.Address;
                        }
                    },
                    {
                        "targets": 4,
                        'className': 'col-lg-1',
                        'searchable': false,
                        'orderable': false,
                        "render": function (data, type, full, meta) {
                                return '<ul class="icons-list text-center"> <li class="dropdown"> <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <i class="icon-menu9"></i> </a> <ul class="dropdown-menu dropdown-menu-right"> ' +
                                    '<li><a class="text-primary" onclick="updateFunction(' + full.Id + ')"><i class="icon-pencil"></i> Edit</a></li>' +
                                    '<li><a class="text-danger" onclick="deleteFunction(' + full.Id + ')" data-toggle="modal" data-target="#deleteModal"><i class="glyphicon glyphicon-floppy-remove"></i> Delete</a></li>' +
                                    '</ul></li></ul>';
                            }
                        }

            ],
            "serverSide": "true",
            "processing": "true",
            "language":
            {
                "processing": "<i class='icon-spinner spinner icon-3x'></i>",
                "search": "<span>Search :</span> _INPUT_",
                "searchPlaceholder": "filter Product Type",
                "lengthMenu": "<span>Show :</span> _MENU_",
                "paginate": { 'first': 'First', 'last': 'Last', 'next': '&rarr;', 'previous': '&larr;' }
            }
        });
    }
    function updateFunction(id)
    {
        $.ajax({
            type: 'POST',
            url: "../SuperAdmin/AdminById",
            dataType: "json",
            data: {
                id: id
            },
            success: function (response)
            {
                $("#updId").val(response.Id);
                $("#updName").val(response.Name);
                $("#updContact").val(response.Contact);
                $("#updAddress").val(response.Address);
                $("#updateModal").modal('show');
            },
            error: function ()
            {
                alert("ajax Failed");
            }
        });

    }

    function deleteFunction(id) {
        var a = document.getElementById('deleteId');
        a.href = "../SuperAdmin/DeleteAdmin?id=" + id + "";
    }

</script>


