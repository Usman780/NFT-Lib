@{
    ViewBag.Title = "User Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .square {
        background: #F2F2F2;
        width: 100%;
        /* height: 100%;*/
    }

    h1, h2 {
        color: #2a2b6e;
    }

    p {
        color: #5dba47 !important;
    }
</style>

<div class="m-15" id="alertMsg" style="font-weight:bold;">

</div>

<div style="min-height:700px;" id="pdfholder">

    <div class="row text-center">
        <h1><strong><u>User Dashboard</u></strong></h1>
    </div>

    <div class="row m-5">
        <div class="col-lg-offset-3 col-lg-3 col-md-offset-3 col-md-3 col-xs-6">
            <div class="square">
                <br /><br />
                <center><p><strong>@*Total Warehouses*@</strong></p></center>
                <br />
